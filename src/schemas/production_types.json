{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "patternProperties": {
    "^.+$": {
      "type": "object",
      "properties": {
        "stage1": { "$ref": "#/definitions/stage" },
        "stage2": { "$ref": "#/definitions/stage" }
      },
      "required": ["stage1", "stage2"],
      "additionalProperties": false
    }
  },
  "definitions": {
    "stage": {
      "type": "object",
      "properties": {
        "cmd": { "type": "string" },
        "args": { "type": "array", "items": { "type": "string" } },
        "output_file": { "type": "string" },
        "on_completion": {
          "type": "array",
          "items": { "type": "string" },
          "optional": true
        },
        "pre_run": {
          "type": "array",
          "items": { "type": "string" },
          "optional": true
        }
      },
      "required": ["cmd", "args", "output_file"],
      "additionalProperties": false
    }
  }
}